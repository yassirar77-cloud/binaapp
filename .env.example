# BinaApp Environment Configuration

# Application
APP_NAME=BinaApp
APP_ENV=development
APP_DEBUG=true
BASE_URL=http://localhost:3000
API_URL=http://localhost:8000

# Supabase
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# DeepSeek AI
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/v1

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=binaapp-websites
R2_PUBLIC_URL=https://your-r2-public-url.com

# Stripe Payment
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Domain Configuration
MAIN_DOMAIN=binaapp.my
SUBDOMAIN_SUFFIX=.binaapp.my

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database (Supabase handles this, but for direct connection if needed)
DATABASE_URL=postgresql://user:password@host:5432/binaapp

# Redis (for caching, optional)
REDIS_URL=redis://localhost:6379

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# WhatsApp Business API (for auto-integration)
WHATSAPP_BUSINESS_PHONE=+60123456789

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_PAYMENTS=true
ENABLE_CUSTOM_DOMAINS=false
