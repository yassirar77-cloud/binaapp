# BinaApp Environment Configuration

# Application
APP_NAME=BinaApp
APP_ENV=development
APP_DEBUG=true
BASE_URL=http://localhost:3000
API_URL=http://localhost:8000

# Supabase
SUPABASE_URL=https://wjaztxkbaeqjabybxhct.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# AI APIs
QWEN_API_KEY=your_qwen_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/v1

# Supabase Storage
STORAGE_BUCKET_NAME=websites

# Stripe Payment
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Domain Configuration
MAIN_DOMAIN=binaapp.my
SUBDOMAIN_SUFFIX=.binaapp.my

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/binaapp

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# WhatsApp Business API
WHATSAPP_BUSINESS_PHONE=+60123456789

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_PAYMENTS=true
ENABLE_CUSTOM_DOMAINS=false

# Telegram Health Alerts
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Get chat ID by messaging your bot and visiting: https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Health Check Settings
HEALTH_CHECK_TIMEOUT=10
DISK_WARNING_THRESHOLD=80
DISK_CRITICAL_THRESHOLD=95
BINAAPP_FRONTEND_URL=https://binaapp.my
BINAAPP_BACKEND_URL=https://api.binaapp.my
