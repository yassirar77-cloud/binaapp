{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    // NOTE: Vercel documentation sometimes recommends 'node' for older Next.js versions.
    // However, if your local build works, 'bundler' should be fine.
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // --- FINAL FIX: Explicitly set base URL and paths ---
    "baseUrl": ".",
    "paths": {
      // This is the correct pathing for your structure (src/lib/supabase)
      "@/*": ["./src/*"] 
    }
    // ----------------------------------------------------
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
