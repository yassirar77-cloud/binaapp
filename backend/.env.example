# Copy this to .env and fill in your actual values

# Application
APP_NAME=BinaApp
APP_ENV=development
APP_DEBUG=true
BASE_URL=http://localhost:3000
API_URL=http://localhost:8000

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# DeepSeek AI
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Supabase Storage
STORAGE_BUCKET_NAME=websites

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ToyyibPay (Malaysian Payment Gateway)
TOYYIBPAY_SECRET_KEY=your_toyyibpay_secret_key
TOYYIBPAY_CATEGORY_CODE=your_category_code
TOYYIBPAY_SANDBOX=False
TOYYIBPAY_CALLBACK_URL=https://api.binaapp.my/api/payments/toyyibpay/callback
TOYYIBPAY_RETURN_URL=https://binaapp.my/payment/success

# Domain
MAIN_DOMAIN=binaapp.my
SUBDOMAIN_SUFFIX=.binaapp.my

# Security
JWT_SECRET_KEY=your_jwt_secret_key_generate_a_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Redis
REDIS_URL=redis://localhost:6379

# Stability AI (Image Generation for "Jana Gambar AI")
# Get from: https://platform.stability.ai â†’ API Keys
STABILITY_API_KEY=your_stability_api_key_here

# Telegram Health Alerts (Required for health check notifications)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Get chat ID by messaging your bot and visiting: https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Health Check Settings (Optional)
HEALTH_CHECK_TIMEOUT=10
DISK_WARNING_THRESHOLD=80
DISK_CRITICAL_THRESHOLD=95
BINAAPP_FRONTEND_URL=https://binaapp.my
BINAAPP_BACKEND_URL=https://api.binaapp.my

# Optional
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
WHATSAPP_BUSINESS_PHONE=+60123456789
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
